{
  // icons: material theme icons
  // theme: zedokai -> fleet dark -> colorizer
  // special theme: catppuccin latte (blur) white (looks unusual)
  // fonts: caskaydia mono nerd font -> jetbrains mono nerd font

  // === BASE ===
  "icon_theme": "Material Icon Theme",
  "theme": {
    "mode": "system",
    "dark": "Zedokai",
    "light": "One Light"
  },
  "base_keymap": "VSCode",

  // === fonts ===
  "buffer_font_family": "CaskaydiaMono Nerd Font",
  "buffer_font_size": 24,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",

  "buffer_font_features": {
    "calt": true
  },

  // Interface font
  "ui_font_family": "CaskaydiaMono Nerd Font",
  "ui_font_size": 18,
  "ui_font_weight": 900,

  // (none, gutter, line, all)
  "current_line_highlight": "all",
  "selection_highlight": true,
  "cursor_blink": true,

  // (bar, block, underline, hollow)
  "cursor_shape": "bar",

  "hide_mouse": "on_typing_and_movement",
  "preferred_line_length": 80,
  "wrap_guides": [80, 120],

  // (none, editor_width, preferred_line_length, bounded)
  "soft_wrap": "editor_width",

  // (all, selection, none, boundary)
  "show_whitespaces": "selection",

  // === Zed settings ===
  "hard_tabs": false,
  "tab_size": 2,
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": false,

  // === VIM ===
  "vim_mode": false,

  // === Zed panel ===
  "project_panel": {
    "dock": "left",
    "default_width": 240,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_size": 14,
    "entry_spacing": "comfortable",
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "auto"
    }
  },

  // === Outline panel ===
  "outline_panel": {
    "dock": "left",
    "default_width": 300,
    "file_icons": true,
    "folder_icons": true,
    "auto_reveal_entries": true,
    "indent_guides": {
      "show": "always"
    }
  },

  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "errors"
  },

  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true,
    "show_tab_bar_buttons": true
  },

  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },

  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },

  "use_smartcase_search": true,
  "seed_search_query_from_cursor": "selection",

  // === File manager ===
  "file_finder": {
    "file_icons": true,
    "modal_max_width": "medium",
    "skip_focus_for_active_in_search": true
  },

  // === Snippets ===
  "completions": {
    "words": "fallback",
    "lsp": true,
    "lsp_fetch_timeout_ms": 500,
    "lsp_insert_mode": "replace_suffix"
  },

  // === Terminal ===

  "terminal": {
    "dock": "bottom",
    "default_height": 320,
    "default_width": 640,
    "working_directory": "current_project_directory",
    "shell": "system",
    "copy_on_select": false,
    "blinking": "terminal_controlled",
    "alternate_scroll": "off",
    "option_as_meta": false,
    "button": true,
    "font_family": "CaskaydiaMono Nerd Font",
    "font_size": 20,
    "line_height": "comfortable",
    "toolbar": {
      "breadcrumbs": true
    },
    "env": {},
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "scrollbar": {
      "show": "auto"
    }
  },

  // Specific Language Settings
  "languages": {
    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "preferred_line_length": 88,
      "soft_wrap": "none"
    },
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "preferred_line_length": 100
    },
    "Rust": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server",
      "preferred_line_length": 100
    }
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "cargo": {
          "features": "all"
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "staticcheck": true
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "analysis": {
            "typeCheckingMode": "strict",
            "autoImportCompletions": true
          }
        }
      }
    }
  },

  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
      "show_commit_summary": true
    },
    "hunk_style": "staged_hollow"
  },
  "lsp_highlight_debounce": 75,

  // === Indexing ===

  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },

  // === Scrollbar ===

  "scrollbar": {
    "show": "system",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_text": true,
    "selected_symbol": true,
    "diagnostics": "all",
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/target",
    "**/__pycache__",
    "**/.pytest_cache",
    "**/.mypy_cache"
  ],

  "file_scan_inclusions": [".env*", ".gitignore", ".dockerignore"],
  "file_types": {
    "JSONC": ["**/.zed/**/*.json", "**/zed/**/*.json"],
    "Shell Script": [".env.*"],
    "Dockerfile": ["Dockerfile*", "*.dockerfile"],
    "YAML": ["*.yml", "*.yaml"],
    "TOML": ["Cargo.lock", "Pipfile", "pyproject.toml"]
  }
}
